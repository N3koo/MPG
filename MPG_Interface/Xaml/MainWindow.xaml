<Window x:Class="MPG_Interface.Xaml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localControl="clr-namespace:MPG_Interface.Xaml.LocalControl"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="KoberExport" Height="720" Width="1280" WindowState="Maximized" ResizeMode="CanResize">

    <TabControl>
        <TabItem Header="Planificare fabricatie">
            <localControl:Command/>
        </TabItem>

        <TabItem Header="Urmarire fabricatie">
            <localControl:Production/>
        </TabItem>

        <TabItem Header="Rapoarte">
            <localControl:Report/>
        </TabItem>

        <TabItem Header="Mentenanta">
            <localControl:Settings/>
        </TabItem>
    </TabControl>
</Window>
